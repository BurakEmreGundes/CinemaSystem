@page
@model RegisterModel
@{ ViewData["Title"] = "Kayıt Ol";
    Layout = "_LoginLayout";}

<br />
<br />
<br />


<div class="container">


    <h1 class="text-center">@ViewData["Title"]</h1>
    <br />
    <br />
  
    
    <div class="row mt-5">
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Yeni bir üyelik oluştur</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Surname"></label>
                    <input asp-for="Input.Surname" class="form-control" />
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Birthday"></label>
                    <input asp-for="Input.Birthday" class="form-control" />
                    <span asp-validation-for="Input.Birthday" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
            </form>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <section>
                <h4>Sisteme kayıt olup yapıp dilediğiniz filme bilet alabilir dilediğiniz filme yorum yapabilirsiniz.</h4>
                <hr />

                <div>
                    <p>
                        Eğer sen de hala sistemimize kayıt olmadıysan, hemen kolayca kayıt ol ve film keyfinin tadını en doğru şekilde çıkart.
                    </p>
                </div>

            </section>
        </div>
    </div>
</div>

<br />
<br />
<br />



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
