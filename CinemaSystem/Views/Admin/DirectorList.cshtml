@model IEnumerable<CinemaSystem.Models.Director>

@{ ViewData["Title"] = "Index";
    Layout = "_AdminLayout";}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DirectorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectorSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DirectorName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DirectorSurname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gender.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Country.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateOfBirth)
    </td>
    <td>
        <a asp-action="DirectorEdit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="DirectorDetails" asp-route-id="@item.Id">Details</a> |
        <a asp-action="DirectorDelete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
