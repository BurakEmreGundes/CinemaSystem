@model IEnumerable<CinemaSystem.Models.ActorRole>

@{ ViewData["Title"] = "Index";
    Layout = "_AdminLayout";}

<h1>Index</h1>

<p>
    <a asp-action="ActorRoleCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.RoleType)
    </td>
    <td>
        <a asp-action="ActorRoleEdit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="ActorRoleDetails" asp-route-id="@item.Id">Details</a> |
