@model IEnumerable<CinemaSystem.Models.TheaterChair>

@{ ViewData["Title"] = "Index";
    Layout = "_AdminLayout";}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CinemaTheater)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChairCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CinemaTheater.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ChairCode)
    </td>
    <td>
        <a asp-action="TheaterChairEdit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="TheaterChairDetails" asp-route-id="@item.Id">Details</a> |
        <a asp-action="TheaterChairDelete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
