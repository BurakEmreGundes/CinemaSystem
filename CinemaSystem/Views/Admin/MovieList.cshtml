@model IEnumerable<CinemaSystem.Models.Movie>

@{ 
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
    }

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IMDB_Puan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fragment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MovieName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Year)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Time)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IMDB_Puan)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Subject)
    </td>
    <td>
        <img src="@Url.Content(item.Poster)" class="d-block w-100" asp-append-version="true" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Fragment)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Language.Id)
    </td>
    <td>
        <a asp-action="MovieEdit" asp-controller="Admin" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="MovieDetails" asp-controller="Admin" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-controller="Movies" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
