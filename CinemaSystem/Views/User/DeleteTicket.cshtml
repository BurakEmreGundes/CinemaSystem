@model CinemaSystem.Models.MovieTicket

@{ ViewData["Title"] = "Delete"; }
@{ Layout = "_UserLayout"; }


<div class="container">
    <div class="row" style="display:flex; justify-content:center; margin-top:70px;">
        <div class="col-md-6 card bg-gradient-secondary shadow" style="padding-bottom:40px;  padding-top:40px; border-radius:15px;">
            <h2 class="text-center text-white">Are you sure you want to delete this?</h2>
            <div>


                <br />
                <br />
                <br />
                <form asp-action="Delete" asp-controller="MovieTickets" class="text-center">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" style="font-size:22px;" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>





</div>

